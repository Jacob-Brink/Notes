{
    "manifest_version": 2,
    "name": "Youtube Playlist Button Adder",
    "version": "1.0",

    "description": "Adds a button to the Youtube Playlist",

    "content_scripts": [
	{
	    "matches": ["*://www.youtube.com/*"],
	    "js": ["content-script.js"]
	}
    ],

    "permissions": [
	"*://www.youtube.com/*",
	"webRequest"
    ]

}
